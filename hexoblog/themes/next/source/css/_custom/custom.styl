// Custom styles.
// 主页文章添加阴影效果
.post {
    margin-top: 0px;
    margin-bottom: 20px;
    padding: 10px;
    background: #FFF;
    -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
    -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}

.content-wrap{
    background: transparent;
}

.footer{
    padding: 0px;
    padding-bottom: 20px;
}

// 主页文章内间距
.content-wrap {
    padding: 0px;
}

.posts-expand {
    padding-top: 0px;
}

// 超链接颜色
.post-body p a {
    color: #0593d3;
    border-bottom: none;
    border-bottom: 1px solid #0593d3;
    &:hover {
    color: #fc6423;
    border-bottom: none;
    border-bottom: 1px solid #fc6423;
    }
}